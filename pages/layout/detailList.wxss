page{
	width:100%;
	height:100%;
}
.container{
	width:100%;
	height:100%;
    margin:0;
    box-sizing: border-box;
	background: #f4f4f4;
}
.topWrap{
	width:100%;
	height:195rpx;
	box-sizing: border-box;
	padding:20rpx 30rpx;
}
.top_logo{
	float:left;
	width:116rpx;
	height:116rpx;
	border-radius: 10px;
	box-sizing: border-box;
	overflow: hidden;
}
.top_info{
	float:left;
	padding-left:20rpx;
	width:570rpx;
	height:116rpx;
	box-sizing: border-box;
}
.top_title{
	margin: 0;
    font-size: 14pt;
    color:#666;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.top_dur{
	font-size: 9pt;
	color:#666;
	line-height: 10pt;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.descr{
	width:100%;
	line-height: 12pt;
	font-size: 10pt;
	padding-top:10rpx;
	height:40rpx;
	white-space: nowrap;
    overflow: hidden;
    color:pink;
    text-overflow: ellipsis;
}
/*商品列表*/
.foodList{
	width:100%;
	overflow: hidden;
	height: 100%;
	box-sizing: border-box;
}
.nav-wrap{
	width:100%;
    box-sizing: border-box;

}
.nav-item{
	width:100%;
	height:80rpx;
	box-sizing: border-box;
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	background: #fff;
	justify-content:space-around;
}
.nav-child{
	width:40px;
	box-sizing: border-box;
	text-align: center;
	font-size: 13pt;
	color: #666;
}
.active{
	color: #3190e8;
}
.active .tap-undline{
    border-color:#3190e8;
}
.tap-undline{
    width:100%;
    margin-top:4rpx;
    border:solid 1px #fff;
}
.navContainer{
	width:100%;
	height: 100%;
	border-top: solid 1px #ddd;
	overflow: hidden;
	box-sizing: border-box;
}
.swiperChild{
	width:100%;
	height:100%;
	box-sizing: border-box;
}
.f-left{
  width:176rpx;
  height:auto;
  float:left;
  overflow: hidden;
  box-sizing: border-box;
  background: #f4f4f4;
}
.r-right{
	width:568rpx;
	height:100%;
	box-sizing: border-box;
  	float:right;
  	position: relative;
  	border-right: 1px solid #ededed;
}
.scrollY{
  width:568rpx;
  height:auto;
  position: absolute;
  left:0;
}
.listItem{
    background-color: #f4f4f4;
    border-right-color: #fff;
    position: relative;
    padding: .466667rem .2rem;
    border-bottom: 1px solid #ededed;
    font-size: 12pt;
    color: #666;
    text-align: center;
}
.listItem1{
	width:100%;
	box-sizing: border-box;
	padding:16rpx 20rpx;
	min-height:222rpx;
	position: relative;
    background-color: #fff;
    margin: 0;
    padding: .4rem .266667rem;
    margin-bottom: 1px;
    display: flex;
    overflow: hidden;
}
.active1{
	background: #fff;
	color:#999;
	font-weight: bold;
}
.itemImg{
	width:104rpx;
	height:104rpx;
	box-sizing: border-box;
	border-radius: 10px;
	overflow: hidden;
	float:left;
}
.food-tit{
	width:415rpx;
	height:163rpx;
	box-sizing: border-box;
	padding-left:15rpx;
}
.addBtn{
	width:100%;
}
.btn{
	position: absolute;
	right:20rpx;
	bottom:40rpx;
	width:44rpx;
	height:44rpx;
	box-sizing: border-box;
	background:#3190e8;
	border-radius: 50%;
	color:#fff;
	font-size: 14pt;
	text-align: center;
	line-height: 44rpx;
}
/*购物车*/
.shopCar{
	width:100%;
	height:100rpx;
	box-sizing: border-box;
	position: fixed;
	bottom: 0;
	left:0;
	z-index: 1000;
}
.carParent{
	width:100%;
	height:100rpx;
	background: #000;
	opacity: 0.7;
	box-sizing: border-box;
	position: relative;
}
.carChild{
	width:750rpx;
	height:100rpx;
	position: fixed;
	bottom:0;
	z-index: 1400;
}
.carImg{
	opacity: 1;
	float:left;
	width:100rpx;
	height:100rpx;
	border-radius: 50%;
	border:solid 1px #fff;
	text-align: center;
	line-height: 100rpx;
	background: #404040;
	box-sizing: border-box;
	padding-top: 20rpx;
	margin-left: 40rpx;
}
.sumPrice{
	width:200rpx;
	height:100rpx;
	float:left;
	box-sizing: border-box;
	color:#fff;
	line-height: 100rpx;
	padding-left:20rpx;
}
.addPay{
	float:right;
	width:200rpx;
	height:100rpx;
	box-sizing: border-box;
	color:#fff;
	line-height: 100rpx;
	text-align: center;
	font-weight: bold;
	background: #4cd964
}