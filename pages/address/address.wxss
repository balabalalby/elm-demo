.page{
	width:100%;
	height:100%;
	background: #f4f4f4;
	color: #cfcfcf;
}
.page__hd{
	margin-top: 20rpx;
	background-color: #fff;
	padding:10rpx 15px;
}
.weui-flex{
	width:100%;
	flex-direction:row;
    flex-wrap: wrap;
    justify-content:flex-start;
    align-items:center;
    border-top: solid 1rpx #ddd;
}
.weui-flex__item{
	flex:none;
	width:25%;
	text-align: center;
	overflow: hidden;
    font-size: 14pt;
    white-space: nowrap;
    text-overflow: ellipsis;
    line-height: 60rpx;
    background: #fff;
    color: #08c;
    box-sizing: border-box;
    border-right: solid 1rpx #ddd;
    border-bottom: solid 1rpx #ddd;
}
.letter{
	padding:0 30rpx;
}
